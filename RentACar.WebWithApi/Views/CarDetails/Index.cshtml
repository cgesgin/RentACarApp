@model IEnumerable<RentACar.Core.DTOs.CarDetailsDto>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<div>
    <a asp-action="Save" asp-controller="CarDetails" class="btn btn-info">Create</a>
</div>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Color</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CarYear</td>
                <td>@item.Color</td>
                <td>
                    <a asp-action="Update" asp-controller="CarDetails" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    <a asp-action="Remove" asp-controller="CarDetails" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>