@model RentACar.Core.DTOs.CarDetailsDto
@{
    ViewData["Title"] = "Save";
}
<h1>Save</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="CarDetails">
            <div class="form-group">
                <label asp-for="CarYear"></label>
                <input asp-for="CarYear" class="form-control"/>
                <span asp-validation-for="CarYear" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control"/>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
